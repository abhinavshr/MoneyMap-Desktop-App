<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyMap.DashboardPage"
             Title="Dashboard">

    <ScrollView>
        <StackLayout Padding="10">
            <!-- Navigation Buttons -->
            <Button Text="Go to Transaction Page" Clicked="TransactionPageOnClicked" Margin="0,10" />

            <!-- Date Range Picker -->
            <Label Text="Filter by Date Range" FontSize="16" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Grid ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="10">
                <DatePicker x:Name="StartDatePicker" />
                <DatePicker x:Name="EndDatePicker" Grid.Column="1" />
            </Grid>
            <Button Text="Apply Filter" Clicked="OnApplyFilterClicked" Margin="0,10,0,10" />

            <!-- Metrics Overview -->
            <Label Text="Metrics Overview" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5"/>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10" ColumnSpacing="10">
                <Label Text="Total Inflows:" />
                <Label x:Name="TotalInflowsLabel" Grid.Column="1" />

                <Label Text="Total Outflows:" Grid.Row="1" />
                <Label x:Name="TotalOutflowsLabel" Grid.Row="1" Grid.Column="1" />

                <Label Text="Remaining Debt:" Grid.Row="2" />
                <Label x:Name="RemainingDebtLabel" Grid.Row="2" Grid.Column="1" />

                <Label Text="Cleared Debt:" Grid.Row="3" />
                <Label x:Name="ClearedDebtLabel" Grid.Row="3" Grid.Column="1" />

                <Label Text="Total Transactions:" Grid.Row="4" />
                <Label x:Name="TotalTransactionsLabel" Grid.Row="4" Grid.Column="1" />

                <Label Text="Total Number of Transactions:" Grid.Row="5" />
                <Label x:Name="TotalTransactionsCountLabel" Grid.Row="5" Grid.Column="1" />
            </Grid>

            <!-- Pending Debts -->
            <Label Text="Pending Debts" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5"/>
            <CollectionView x:Name="PendingDebtsList" SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="0,5" Padding="10" BackgroundColor="LightGray">
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="14" FontAttributes="Bold"/>
                                <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}" />
                                <Label Text="{Binding DueDate, StringFormat='Due: {0:MM/dd/yyyy}'}" />
                                <Label Text="{Binding ClearedAmount, StringFormat='Cleared: {0:C}'}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
